# EditorConfig docs: https://editorconfig.org
root = true

[*]
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
spelling_language = en-US

[*.{lua,php,md,volt,js,vue,html}]
trim_trailing_whitespace = true

[*.md]
spelling_language = en-CA

[*.tsx]
indent_size = 2

[*.css,*.scss,*.sass]
indent_size = 2
