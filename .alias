alias azu="antibody update && source ~/.zshrc"
alias zu="source ~/.zshrc"


alias start="echo '$(date '+%Y-%m-%d @ %H:%M:%S')' > ~/.time"
alias wstart="cat ~/.time"

alias retag='ctags -R --PHP-kinds=ct --exclude="/node_modules/" --exclude="node_modules/**" --languages="php"'

#antigen
alias itheme="antigen theme $1; antigen cleanup -f > /dev/null"

#DB
alias localdb="clear; mycli -u root -h 127.0.0.1"

#PHPCS
alias fix="phpcbf --standard=XpBar"

# WEBPACK
alias hot="npm run hot --env.noMaps"
alias watch="npm run watch --env.noMaps"

# NAVIGATION
alias ..="cd ../"
alias ..d="cd $(dirs -v | grep 1 | sed 's/[0-9]*[[:space:]]*//')"
alias l="ls -1FGH"
alias la="ls -a -FGH"
alias ld="\ls -GHd */"
alias l.="ls -a -GH | grep --color=never '^[\.][^\/\.]'"
alias ll="ls -lh -FGH"
alias lla="ls -lha -FGHll"
alias ls="ls -FGH"
alias mv="mv -v"
alias rm="rm -vi"
alias cp="cp -v"
alias rn="cp"

# GREP
alias grepNOT="grep -v"
alias NOT="grepNOT"
alias grep="grep --color"
alias grepp="grep -P --color"
alias gr='grep'

# FZF
alias fzf="fzf --prompt='\$ ' --tabstop=4 --color=dark,prompt:$mono_4,bg:-1,fg:$mono_3,bg+:-1,fg+:#fefefe,pointer:$hue_5,hl:$hue_4,hl+:$hue_4"

# CLI SHORTCUTS
alias comp="composer"
alias art='php artisan'
alias artm='art migrate'
alias artc="art clear-compiled && art cache:clear && art route:clear && art config:clear && comp du && art view:clear"
alias aql="art queue:listen --tries=3"
alias aqw="php artisan queue:work --once"
alias tink="c; art tinker"
alias c="clear"
alias bc='bc -l'
alias now="date '+%I:%M%p, %Y-%m-%d'"
alias vi="nvim"
alias vim="nvim"
alias slack="slack-term"
alias md="msee"

# GIT
alias master="git checkout master"
alias st="git status"
# alias git="hub"
alias aa="git add ."
alias a="git add"
alias a-="git add"
alias ahunk="git add -p"
alias stash="git stash"
alias shunk="git stash -p"
alias pop="git stash pop"
alias ci="git commit -m"
alias br="git --no-pager branch"
alias mt="git mergetool"
alias fe="git fetch origin"
alias p="git push"
alias pl="git pull"
alias br-feature="git branch -a | NOT remotes/ | NOT master | NOT staging | grep feature-"
alias br-bugfix="git branch -a | NOT remotes/ | NOT master | NOT staging | grep bugfix-"
alias br-merged="git branch --merged | NOT remotes/ | NOT master | NOT staging"
alias glog="nvim -c 'GV' -c 'nnoremap q :qa!<cr>'"
# alias glog="git log --graph --pretty=tformat:'%Cred%h%Creset -%C(auto)%d%Creset %s %Cgreen(%an %ar)%Creset'"
alias gfl="git log -p"
alias cisearch="git log -S"
alias wwiwo="git diff HEAD^ --name-only"

# VALET
alias vshare="(valet unsecure; valet share; valet secure) && c"

#shpotify
alias sp="spotify"
alias spp="spotify pause"
alias sppl="spotify play list"
alias spn="spotify next"
alias spst="spotify status"

# browsing
alias webb="open '/Applications/Vivaldi.app' '$1'"

alias rebash="source ~/.bashrc"
alias bashrc="atom ~/.dotfiles/"
alias moon="curl wttr.in/moon"

alias g="yarn install && rm -rf public/js && rm -rf public/css && gulp"
alias gp="yarn install && rm -rf public/js && rm -rf public/css && gulp --production"
alias gw='gulp watch'
alias gwp='rm -rf public/js && rm -rf public/css && gulp watch --production'
alias deps='composer install && yarn install && rm -rf public/js && rm -rf public/css && gulp'

alias epoch="date +%s"

alias pman='/usr/local/opt/php@7.1/bin/pman'


# Tmux
alias tmuxlayout='tmux list-windows -F "#{window_active} #{window_layout}" | grep "^1" | cut -d " " -f 2 | pbcopy'

alias myip="ifconfig | grep 'inet [0-9.]*' | grep -v '127.0.0.1' | sed 's/inet //g' | sed 's/netmask.*255//g' | tr -d '[:blank:]' | head -n 1";
